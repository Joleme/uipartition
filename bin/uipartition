import sys
import curses

try:
    import UIpartition.Partitioner
except:
    sys.stderr.write("abort: couldn't find uipartition libraries in [%s]\n" %
                     ' '.join(sys.path))
    sys.stderr.write("(check your install and PYTHONPATH)\n")
    sys.exit(-1)
    pass

output_fstab = None
input_fstab = "/etc/fstab"

def run_partitioner(stdscr):
    p = UIpartition.Partitioner.Partitioner(stdscr, output_fstab=output_fstab)
    e = UIpartition.Partitioner._add_disks(p, input_fstab)
    if (e):
        p.popupWin(e)
    else:
        p.sc.refresh()
        pass

    while (not p.done):
        c = stdscr.getch()
        p.handleCharRaw(c)
        p.sc.refresh()
        pass
    return

for i in sys.argv[1:]:
    if (output_fstab == ""):
        output_fstab = i
        continue
    if (input_fstab == ""):
        input_fstab = i
        continue

    if i == "--output-fstab":
        output_fstab = "" # Mark for next iteration
        pass
    elif i == "--input-fstab":
        input_fstab = "" # Mark for next iteration
        pass
    else:
        sys.stderr.write("Unknown parameter: %s\n" % i);
        sys.exit(1)
        pass
    pass

if (output_fstab == ""):
    sys.stderr.write("No parameter given to --output-fstab\n");
    sys.exit(1)
    pass
if (input_fstab == ""):
    sys.stderr.write("No parameter given to --input-fstab\n");
    sys.exit(1)
    pass

curses.wrapper(run_partitioner)
